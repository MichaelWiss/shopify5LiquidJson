{% layout none %}
<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>{{ 'gift_cards.issued.title' | t }}</title>
    <style>
      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        background: #f5f1e8;
        color: #2d2820;
        margin: 0;
        padding: 40px 20px;
        text-align: center;
      }
      .gift-card {
        max-width: 400px;
        margin: 0 auto;
        padding: 32px;
        border: 1px solid #d4cec0;
        background: #fefdfb;
      }
      .gift-card__code {
        font-size: 1.4rem;
        letter-spacing: 0.3em;
        margin: 24px 0;
      }
      .gift-card__btn {
        display: inline-block;
        margin-top: 24px;
        padding: 12px 24px;
        border: 1px solid currentColor;
        text-decoration: none;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        font-size: 0.75rem;
        color: inherit;
      }
    </style>
  </head>
  <body>
    <main class="gift-card">
      <h1>{{ 'gift_cards.issued.title_html' | t: value: gift_card.initial_value }}</h1>
      <p>{{ 'gift_cards.issued.body' | t }}</p>
      <div class="gift-card__code">{{ gift_card.code | format_code }}</div>
      <a class="gift-card__btn" href="{{ shop.url }}">{{ 'gift_cards.issued.shop_link' | t }}</a>
    </main>
  </body>
</html>
