<section class="editorial-grid">
  <div class="editorial-grid__inner">
    {% if section.settings.heading != blank %}
      <div class="editorial-grid__header">
        <h2 class="editorial-grid__heading">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="editorial-grid__subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="editorial-grid__layout">
      {% for block in section.blocks %}
        <article class="editorial-grid__item editorial-grid__item--{{ block.settings.span | default: 'half' }}" {{ block.shopify_attributes }}>
          <div class="editorial-grid__media">
            {% if block.settings.image != blank %}
              {{ block.settings.image | image_url: width: 1200 | image_tag: loading: 'lazy', class: 'editorial-grid__image' }}
            {% else %}
              {{ 'collection-1' | placeholder_svg_tag: 'editorial-grid__placeholder' }}
            {% endif %}
          </div>

          {% if block.settings.caption != blank %}
            <p class="editorial-grid__caption">{{ block.settings.caption }}</p>
          {% endif %}
        </article>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Editorial grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Stories from the studio"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Large-image anchored rhythm with modular spans."
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption"
        },
        {
          "type": "select",
          "id": "span",
          "label": "Grid span",
          "default": "half",
          "options": [
            { "value": "half", "label": "Half width" },
            { "value": "full", "label": "Full width" }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Editorial grid",
      "blocks": [
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}
