{% comment %}
  Product Split Layout Section
  Save this as: sections/product-split-layout.liquid
{% endcomment %}

{% assign spec_blocks = section.blocks | where: "type", "specification" %}
{% assign content_blocks = section.blocks | where: "type", "content_block" %}

{% capture product_split_style %}
  --product-split-sidebar-bg: {{ section.settings.sidebar_bg | default: '#fafafa' }};
  --product-split-text: {{ section.settings.text_color | default: '#1a1a1a' }};
  --product-split-text-muted: {{ section.settings.secondary_text_color | default: '#666666' }};
  --product-split-label: {{ section.settings.label_color | default: '#ffffff' }};
  --product-split-product-bg: {{ section.settings.product_box_bg | default: '#e8e4df' }};
  --product-split-divider: {{ section.settings.divider_color | default: '#dddddd' }};
  --product-split-spec-divider: {{ section.settings.spec_divider_color | default: '#eeeeee' }};
{% endcapture %}
{% assign product_split_style = product_split_style | strip_newlines | strip %}

<section class="product-split-section product-split-section--{{ section.id }}" {% if product_split_style != blank %}style="{{ product_split_style }}"{% endif %}>
  <div class="product-split__wrapper">
    <div class="product-split__media">
      {% if section.settings.hero_image %}
        <img
          src="{{ section.settings.hero_image | img_url: '1600x' }}"
          srcset="{{ section.settings.hero_image | img_url: '400x' }} 400w,
                  {{ section.settings.hero_image | img_url: '800x' }} 800w,
                  {{ section.settings.hero_image | img_url: '1200x' }} 1200w,
                  {{ section.settings.hero_image | img_url: '1600x' }} 1600w,
                  {{ section.settings.hero_image | img_url: '2000x' }} 2000w"
          sizes="(max-width: 968px) 100vw, 66vw"
          alt="{{ section.settings.product_title | default: 'Product' | escape }}"
        >
      {% else %}
        <div class="product-split__media-placeholder">
          Add Hero Image
        </div>
      {% endif %}
    </div>

    {% if section.settings.show_label and section.settings.label_text != blank %}
      <div class="product-split__label">
        <span class="product-split__label-dot"></span>
        <span>{{ section.settings.label_text }}</span>
      </div>
    {% endif %}

    <div class="product-split__details">
      <div class="product-split__sidebar">
        <div class="product-split__sticky">
          {% if section.settings.description != blank %}
            <p class="product-split__description">{{ section.settings.description }}</p>
          {% endif %}

          {% if section.settings.show_product_visual %}
            <div class="product-split__image-box">
              {% if section.settings.product_image %}
                <img
                  src="{{ section.settings.product_image | img_url: '600x' }}"
                  alt="{{ section.settings.product_title | default: 'Product' | escape }}"
                >
              {% else %}
                <div class="product-split__orb">
                  <div class="product-split__orb-main"></div>
                  <div class="product-split__orb-ring"></div>
                </div>
              {% endif %}
            </div>
          {% endif %}

          {% if section.settings.product_title != blank %}
            <div class="product-split__title">{{ section.settings.product_title }}</div>
          {% endif %}

          {% if section.settings.product_price != blank %}
            <div class="product-split__price">{{ section.settings.product_price }}</div>
          {% endif %}

          {% if section.settings.shop_link_url != blank %}
            <a href="{{ section.settings.shop_link_url }}" class="product-split__link">
              {{ section.settings.shop_link_text | default: "Shop" }}
            </a>
          {% endif %}

          {% if section.settings.show_specs and spec_blocks.size > 0 %}
            <div class="product-split__extra">
              <h3>{{ section.settings.specs_title | default: "Specifications" }}</h3>
              {% for block in spec_blocks %}
                <div class="product-split__spec" {{ block.shopify_attributes }}>
                  <span class="product-split__spec-label">{{ block.settings.spec_label }}</span>
                  <span class="product-split__spec-value">{{ block.settings.spec_value }}</span>
                </div>
              {% endfor %}
            </div>
          {% endif %}
        </div>
      </div>

      {% if content_blocks.size > 0 %}
        <div class="product-split__additional">
          {% for block in content_blocks %}
            <article class="product-split__extra" {{ block.shopify_attributes }}>
              {% if block.settings.heading != blank %}
                <h3>{{ block.settings.heading }}</h3>
              {% endif %}
              {% if block.settings.content != blank %}
                {{ block.settings.content }}
              {% endif %}
            </article>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

