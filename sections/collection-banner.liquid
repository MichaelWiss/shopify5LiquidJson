<section class="collection-banner">
  <div class="collection-banner__inner">
    {% if section.settings.eyebrow != blank %}
      <p class="collection-banner__eyebrow intro-eyebrow">{{ section.settings.eyebrow }}</p>
    {% endif %}

    <h1 class="collection-banner__heading intro-heading">{{ collection.title }}</h1>

    {% if section.settings.show_description and collection.description != blank %}
      <div class="collection-banner__description intro-text">{{ collection.description }}</div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Collection banner",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Collection"
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show description",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Collection banner"
    }
  ]
}
{% endschema %}
