<section class="dual-images">
  <div class="dual-images__grid">
    {% for block in section.blocks %}
      <div class="dual-images__item" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          {{ block.settings.image | image_url: width: 2000 | image_tag: loading: 'lazy', class: 'dual-images__media', sizes: '(min-width: 768px) 50vw, 100vw' }}
        {% else %}
          {{ 'lifestyle-4' | placeholder_svg_tag: 'dual-images__media dual-images__media--placeholder' }}
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Dual images",
  "settings": [],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Dual images",
      "blocks": [
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}
