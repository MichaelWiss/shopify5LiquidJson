<section class="final-two">
  {% assign dual_fallbacks = "https://images.unsplash.com/photo-1616486338812-3dadae4b4ace?w=800&q=90|https://images.unsplash.com/photo-1615873968403-89e068629265?w=800&q=90" | split: "|" %}
  {% assign dual_alt = "Final Image 1|Final Image 2" | split: "|" %}
  {% for block in section.blocks %}
    {% assign fallback_src = dual_fallbacks[forloop.index0] %}
    {% assign fallback_alt = dual_alt[forloop.index0] | default: 'Showcase image' %}
    {% assign image_alt = block.settings.alt_text | default: fallback_alt %}
    <figure class="final-image figure-frame" {{ block.shopify_attributes }}>
      {% if block.settings.image != blank %}
        {{ block.settings.image | image_url: width: 2000 | image_tag: loading: 'lazy', sizes: '(min-width: 768px) 50vw, 100vw', alt: image_alt }}
      {% else %}
        <img src="{{ fallback_src }}" alt="{{ image_alt }}" loading="lazy">
      {% endif %}
      {% if block.settings.caption != blank or block.settings.caption_link_label != blank or block.settings.fig_label != blank %}
        <figcaption class="gallery-caption">
          {% if block.settings.fig_label != blank or block.settings.caption != blank %}
            <div class="gallery-caption__label">
              {% if block.settings.fig_label != blank %}
                <span class="gallery-caption__fig">{{ block.settings.fig_label }}</span>
              {% endif %}
              {% if block.settings.caption != blank %}
                <span>{{ block.settings.caption }}</span>
              {% endif %}
            </div>
          {% endif %}
          {% if block.settings.caption_link_label != blank and block.settings.caption_link_url != blank %}
            {% render 'arrow-link',
              text: block.settings.caption_link_label,
              url: block.settings.caption_link_url,
              class: 'gallery-caption__link',
              icon_size: '11'
            %}
          {% endif %}
        </figcaption>
      {% endif %}
    </figure>
  {% endfor %}
</section>

{% schema %}
{
  "name": "Dual images",
  "settings": [],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt text"
        },
        {
          "type": "text",
          "id": "fig_label",
          "label": "Figure label",
          "default": "Fig."
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption"
        },
        {
          "type": "text",
          "id": "caption_link_label",
          "label": "Caption link label"
        },
        {
          "type": "url",
          "id": "caption_link_url",
          "label": "Caption link URL"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Dual images",
      "blocks": [
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}
