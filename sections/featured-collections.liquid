<section class="featured-collections">
  <div class="featured-collections__inner">
    {% if section.settings.heading != blank %}
      <div class="featured-collections__header">
        <h2 class="featured-collections__heading">{{ section.settings.heading }}</h2>
        {% if section.settings.subheading != blank %}
          <p class="featured-collections__subheading">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="featured-collections__grid">
      {% for block in section.blocks %}
        {% assign collection = collections[block.settings.collection] %}
        <article class="featured-collections__card" {{ block.shopify_attributes }}>
          <a class="featured-collections__link" href="{{ collection.url | default: '#' }}">
            <div class="featured-collections__media">
              {% if block.settings.image != blank %}
                {{ block.settings.image | image_url: width: 800 | image_tag: loading: 'lazy', class: 'featured-collections__image' }}
              {% elsif collection.featured_image %}
                {{ collection.featured_image | image_url: width: 800 | image_tag: loading: 'lazy', class: 'featured-collections__image' }}
              {% else %}
                {{ 'collection-1' | placeholder_svg_tag: 'featured-collections__placeholder' }}
              {% endif %}
            </div>
            <div class="featured-collections__meta">
              <h3 class="featured-collections__title">
                {{ block.settings.title | default: collection.title | default: 'Collection' }}
              </h3>
              {% if block.settings.description != blank %}
                <p class="featured-collections__description">{{ block.settings.description }}</p>
              {% endif %}
            </div>
          </a>
        </article>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured collections",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured collections"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Curated groupings built on the editorial system."
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Override image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title override"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Featured collections",
      "blocks": [
        { "type": "collection" },
        { "type": "collection" },
        { "type": "collection" }
      ]
    }
  ]
}
{% endschema %}
