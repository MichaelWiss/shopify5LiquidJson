<section class="hero-full-bleed">
  <div class="hero-full-bleed__media">
    {% if section.settings.image != blank %}
      {{ section.settings.image | image_url: width: 3200 | image_tag: loading: 'eager', class: 'hero-full-bleed__image', sizes: '100vw' }}
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'hero-full-bleed__image hero-full-bleed__image--placeholder' }}
    {% endif %}
    <div class="hero-full-bleed__overlay"></div>
  </div>
  {% if section.settings.heading != blank %}
    <div class="hero-full-bleed__title-wrapper">
      <h1 class="hero-full-bleed__title">{{ section.settings.heading }}</h1>
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Hero full bleed",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "In Common With"
    }
  ],
  "presets": [
    {
      "name": "Hero full bleed"
    }
  ]
}
{% endschema %}
