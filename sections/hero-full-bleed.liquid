<section class="hero">
  {% if section.settings.image != blank %}
    {{ section.settings.image | image_url: width: 3200 | image_tag: loading: 'eager', class: 'hero-image', sizes: '100vw' }}
  {% else %}
    {{ 'lifestyle-1' | placeholder_svg_tag: 'hero-image hero-image--placeholder' }}
  {% endif %}
  <div class="hero-overlay"></div>
  {% if section.settings.heading != blank %}
    <h1 class="hero-title">{{ section.settings.heading }}</h1>
  {% endif %}
</section>

{% schema %}
{
  "name": "Hero full bleed",
  "tag": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Hero image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "In Common With"
    }
  ],
  "presets": [
    {
      "name": "Hero full bleed"
    }
  ]
}
{% endschema %}
