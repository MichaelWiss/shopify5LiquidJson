<header class="site-header">
  <div class="site-header__inner">
    <a class="site-header__logo" href="/">{{ section.settings.logo_text | default: shop.name }}</a>

    <nav class="site-header__nav" aria-label="{{ 'general.navigation' | t }}">
      {% if section.blocks.size > 0 %}
        <ul class="site-header__menu">
          {% for block in section.blocks %}
            <li class="site-header__item" {{ block.shopify_attributes }}>
              <a class="site-header__link" href="{{ block.settings.url | default: '#' }}">{{ block.settings.label }}</a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </nav>

    <div class="site-header__actions">
      <a class="site-header__icon" href="/search">{% render 'icon', name: 'search' %}</a>
      <a class="site-header__icon" href="/cart">
        {% render 'icon', name: 'cart' %}
        <span class="site-header__cart-count" {% if cart.item_count == 0 %}hidden{% endif %}>{{ cart.item_count }}</span>
      </a>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo text",
      "default": "In Common With"
    }
  ],
  "blocks": [
    {
      "type": "nav_link",
      "name": "Navigation link",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Shop"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Header",
      "blocks": [
        { "type": "nav_link", "settings": { "label": "Shop" } },
        { "type": "nav_link", "settings": { "label": "Collections" } },
        { "type": "nav_link", "settings": { "label": "Showrooms" } },
        { "type": "nav_link", "settings": { "label": "Trade" } }
      ]
    }
  ]
}
{% endschema %}
