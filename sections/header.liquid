<header class="site-header">
  <div class="header-container">
    <a href="/" class="site-logo">{{ section.settings.logo_text | default: shop.name }}</a>

    <nav class="header-nav" aria-label="{{ 'general.navigation' | t }}">
      <a href="#">Shop</a>
      <a href="#">Collections</a>
      <a href="#">Showrooms</a>
      <a href="#">Trade</a>
    </nav>

    <div class="header-icons">
      <a href="/search" class="header-icon">{% render 'icon', name: 'search' %}</a>
      <a href="/cart" class="header-icon">{% render 'icon', name: 'cart' %}
        <span class="cart-count" {% if cart.item_count == 0 %}hidden{% endif %}>{{ cart.item_count }}</span>
      </a>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo text",
      "default": "In Common With"
    }
  ],
  "presets": [
    {
      "name": "Header"
    }
  ]
}
{% endschema %}
