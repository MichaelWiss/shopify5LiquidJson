<div class="cart-page">
  <div class="cart-page__content">
    <div class="cart-page__header">
      <h1 class="cart-page__title">{{ 'cart.general.title' | t }}</h1>
      <button class="cart-page__close" type="button" onclick="window.history.back()">
        {{ 'cart.general.close' | t }}
      </button>
    </div>

    {% if cart.item_count > 0 %}
      <div class="cart-page__items">
        {% for item in cart.items %}
          {% render 'cart-item', item: item, line_index: forloop.index, include_aria_labels: true %}
        {% endfor %}
      </div>

      {% render 'cart-footer', cart: cart, context: 'page' %}
    {% else %}
      <div class="cart-empty">
        <p class="cart-empty__message">{{ 'cart.general.empty' | t }}</p>
        <a href="{{ routes.all_products_collection_url }}" class="cart-btn cart-btn--primary">
          {{ 'cart.general.continue' | t }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Cart",
  "settings": [],
  "presets": [
    {
      "name": "Cart"
    }
  ]
}
{% endschema %}
