<div class="cart-page">
  <div class="cart-drawer">
    <div class="cart-drawer__header">
      <h1 class="cart-drawer__title">Your Cart</h1>
      <a href="{{ routes.all_products_collection_url }}" class="cart-drawer__close">Close</a>
    </div>

    {% if cart.item_count > 0 %}
      <div class="cart-drawer__items">
        {% for item in cart.items %}
          {% render 'cart-item', item: item, line_index: forloop.index %}
        {% endfor %}
      </div>

      <div class="cart-drawer__footer">
        <div class="cart-drawer__subtotal">
          <span class="cart-drawer__subtotal-label">Subtotal:</span>
          <span class="cart-drawer__subtotal-value">{{ cart.total_price | money }}</span>
        </div>

        <div class="cart-drawer__actions">
          <button class="cart-btn cart-btn--secondary" type="button">Add a P.O. Number</button>
          <button class="cart-btn cart-btn--secondary" type="button">Request Quote</button>
          <form action="{{ routes.cart_url }}" method="post">
            <button class="cart-btn cart-btn--primary" type="submit" name="checkout">Checkout</button>
          </form>
        </div>
      </div>
    {% else %}
      <div class="cart-empty">
        <p class="cart-empty__message">Your cart is empty</p>
        <a href="{{ routes.all_products_collection_url }}" class="cart-btn cart-btn--primary">Continue Shopping</a>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Cart",
  "settings": [],
  "presets": [
    {
      "name": "Cart"
    }
  ]
}
{% endschema %}
