<section class="text-columns">
  <div class="text-columns__inner page-rails">
    {% if section.settings.eyebrow != blank %}
      <p class="intro-eyebrow">{{ section.settings.eyebrow }}</p>
    {% endif %}
    {% if section.settings.heading != blank %}
      <h2 class="intro-heading">{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.text != blank %}
      <div class="intro-text">{{ section.settings.text }}</div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="text-columns__columns">
        {% for block in section.blocks %}
          <div class="text-columns__column" {{ block.shopify_attributes }}>
            {% if block.settings.heading != blank %}
              <h3>{{ block.settings.heading }}</h3>
            {% endif %}
            {% if block.settings.body != blank %}
              <div class="text-columns__body">
                {{ block.settings.body | newline_to_br }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Text columns",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Notes"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Craftsmanship and service"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Intro text",
      "default": "<p>Tailored support for architects, designers, and collectors.</p>"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Column heading",
          "default": "Column heading"
        },
        {
          "type": "textarea",
          "id": "body",
          "label": "Body",
          "default": "Add supporting copy for this column."
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Text columns",
      "blocks": [
        { "type": "column", "settings": { "heading": "Services" } },
        { "type": "column", "settings": { "heading": "Materials" } },
        { "type": "column", "settings": { "heading": "Contact" } }
      ]
    }
  ]
}
{% endschema %}
