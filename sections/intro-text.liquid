<section class="intro-text intro-text--{{ section.settings.alignment }}">
  <div class="intro-text__inner">
    {% if section.settings.eyebrow != blank %}
      <p class="intro-text__eyebrow">{{ section.settings.eyebrow }}</p>
    {% endif %}

    {% if section.settings.heading != blank %}
      <h2 class="intro-text__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.text != blank %}
      <div class="intro-text__body">{{ section.settings.text }}</div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Intro text",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Philosophy"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Design for quiet commerce"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Body copy",
      "default": "<p>Set the tone for the homepage with proportioned typography and measured line lengths.</p>"
    },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alignment",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Intro text"
    }
  ]
}
{% endschema %}
