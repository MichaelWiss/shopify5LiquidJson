<section class="finishes-section">
  <div class="finishes-container">
    {% if section.settings.heading != blank %}
      <h2 class="intro-heading">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="finish-grid">
      {% for block in section.blocks %}
        <div class="finish-swatch" {{ block.shopify_attributes }}>
          <span class="finish-box" style="{% if block.settings.swatch_color != blank %}background-color: {{ block.settings.swatch_color }};{% endif %}">
            {% if block.settings.image != blank %}
              {{ block.settings.image | image_url: width: 120 | image_tag: loading: 'lazy', class: 'finish-sample' }}
            {% endif %}
          </span>

          {% if block.settings.label != blank %}
            <p class="finish-label">{{ block.settings.label }}</p>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Finish swatches",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Available finishes"
    }
  ],
  "blocks": [
    {
      "type": "swatch",
      "name": "Swatch",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label",
          "default": "Brushed brass"
        },
        {
          "type": "color",
          "id": "swatch_color",
          "label": "Color fallback"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Finish swatches",
      "blocks": [
        { "type": "swatch" },
        { "type": "swatch" },
        { "type": "swatch" }
      ]
    }
  ]
}
{% endschema %}
