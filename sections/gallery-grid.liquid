<section class="gallery-grid" data-columns="{{ section.settings.columns }}">
  {% assign grid_fallbacks = "https://images.unsplash.com/photo-1600566753190-17f0baa2a6c3?w=800&q=90|https://images.unsplash.com/photo-1600607687920-4e2a09cf159d?w=800&q=90|https://images.unsplash.com/photo-1600585152220-90363fe7e115?w=800&q=90|https://images.unsplash.com/photo-1616486338812-3dadae4b4ace?w=800&q=90|https://images.unsplash.com/photo-1615873968403-89e068629265?w=800&q=90|https://images.unsplash.com/photo-1600494603989-9650cf6ddd3d?w=800&q=90" | split: "|" %}
  {% assign grid_alt = "Interior 1|Interior 2|Interior 3|Interior 4|Interior 5|Interior 6" | split: "|" %}
  
  {% case section.settings.columns %}
    {% when 2 %}
      {% assign column_class = 'gallery-grid--2-col' %}
      {% assign sizes = '(min-width: 768px) 50vw, 100vw' %}
    {% when 3 %}
      {% assign column_class = 'gallery-grid--3-col' %}
      {% assign sizes = '(min-width: 1024px) 33vw, 100vw' %}
    {% when 4 %}
      {% assign column_class = 'gallery-grid--4-col' %}
      {% assign sizes = '(min-width: 1024px) 25vw, (min-width: 768px) 50vw, 100vw' %}
    {% else %}
      {% assign column_class = 'gallery-grid--3-col' %}
      {% assign sizes = '(min-width: 1024px) 33vw, 100vw' %}
  {% endcase %}

  <div class="gallery-grid__inner {{ column_class }}">
    {% for block in section.blocks %}
      {% assign fallback_src = grid_fallbacks[forloop.index0] %}
      {% assign fallback_alt = grid_alt[forloop.index0] | default: 'Gallery image' %}
      {% assign image_alt = block.settings.alt_text | default: fallback_alt %}
      <figure class="gallery-grid__item figure-frame" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          {{ block.settings.image | image_url: width: 1600 | image_tag: loading: 'lazy', sizes: sizes, alt: image_alt }}
        {% else %}
          <img src="{{ fallback_src }}" alt="{{ image_alt }}" loading="lazy">
        {% endif %}
        {% render 'gallery-caption',
          fig_label: block.settings.fig_label,
          caption: block.settings.caption,
          link_label: block.settings.caption_link_label,
          link_url: block.settings.caption_link_url
        %}
      </figure>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Gallery grid",
  "settings": [
    {
      "type": "range",
      "id": "columns",
      "label": "Columns",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3,
      "info": "Number of columns in grid layout"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt text"
        },
        {
          "type": "text",
          "id": "fig_label",
          "label": "Figure label",
          "default": "Fig."
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption"
        },
        {
          "type": "text",
          "id": "caption_link_label",
          "label": "Caption link label"
        },
        {
          "type": "url",
          "id": "caption_link_url",
          "label": "Caption link URL"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Gallery grid",
      "settings": {
        "columns": 3
      },
      "blocks": [
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}
