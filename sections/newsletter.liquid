<section class="newsletter-signup">
  <div class="newsletter-signup__container">
    {% if section.settings.label != blank %}
      <div class="newsletter-signup__label">{{ section.settings.label }}</div>
    {% endif %}
    
    {% if section.settings.heading != blank %}
      <h2 class="newsletter-signup__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {% assign newsletter_form_id = 'NewsletterForm-' | append: section.id %}
    {% form 'customer', id: newsletter_form_id, class: 'newsletter-signup__form' %}
      {% if form.posted_successfully? %}
        <div class="newsletter-signup__success">
          {{ section.settings.success_message }}
        </div>
      {% else %}
        <div class="newsletter-signup__form-wrapper">
          <input type="hidden" name="contact[tags]" value="newsletter">
          <input
            id="newsletter-email-{{ section.id }}"
            class="newsletter-signup__input"
            type="email"
            name="contact[email]"
            value="{{ form.email | escape }}"
            placeholder="{{ section.settings.placeholder }}"
            required
            aria-label="Email address"
          >
          <button class="newsletter-signup__button" type="submit">
            <span class="newsletter-signup__text">{{ section.settings.button_label }}</span>
          </button>
        </div>
        {% if form.errors %}
          <div class="newsletter-signup__error">
            {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
          </div>
        {% endif %}
      {% endif %}
    {% endform %}
  </div>
</section>

{% schema %}
{
  "name": "Newsletter signup",
  "settings": [
    {
      "type": "text",
      "id": "label",
      "label": "Label",
      "default": "NEWSLETTER"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Studio News & Updates"
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Email placeholder",
      "default": "Your Email Address"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "SIGN UP"
    },
    {
      "type": "textarea",
      "id": "success_message",
      "label": "Success message",
      "default": "Thank you for subscribing!"
    }
  ],
  "presets": [
    {
      "name": "Newsletter signup"
    }
  ]
}
{% endschema %}
