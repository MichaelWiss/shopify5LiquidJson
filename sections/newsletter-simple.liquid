<section class="newsletter-simple">
  <div class="newsletter-simple__container">
    {% if section.settings.heading != blank %}
      <h2 class="newsletter-simple__heading">{{ section.settings.heading }}</h2>
    {% endif %}
    {% form 'customer', id: 'NewsletterForm-' | append: section.id, class: 'newsletter-simple__form' %}
      {% if form.posted_successfully? %}
        <p class="newsletter-simple__success">{{ section.settings.success_message }}</p>
      {% else %}
        <div class="newsletter-simple__fields">
          <input
            type="email"
            name="contact[email]"
            class="newsletter-simple__input"
            value="{{ form.email | escape }}"
            placeholder="{{ section.settings.placeholder }}"
            required
          >
          <button type="submit" class="newsletter-simple__submit">
            {{ section.settings.button_label }}
          </button>
        </div>
        {% if form.errors %}
          <p class="newsletter-simple__error">{{ form.errors.translated_fields['email'] | default: form.errors.messages['email'] }}</p>
        {% endif %}
      {% endif %}
    {% endform %}
  </div>
</section>

{% schema %}
{
  "name": "Newsletter simple",
  "settings": [
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "Subscribe to our newsletter to stay in the know and get 10% off the latest news and happenings."
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Input placeholder",
      "default": "Enter your email address"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Subscribe"
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "Success message",
      "default": "Thanks for subscribing."
    }
  ],
  "presets": [
    {
      "name": "Newsletter simple"
    }
  ]
}
{% endschema %}
