<section class="newsletter">
  <div class="newsletter-container">
    {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}
    {% assign newsletter_form_id = 'NewsletterForm-' | append: section.id %}
    {% form 'customer', id: newsletter_form_id, class: 'newsletter-form' %}
      {% if form.posted_successfully? %}
        <p class="newsletter-success">{{ section.settings.success_message }}</p>
      {% else %}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <input
          type="email"
          name="contact[email]"
          class="newsletter-input"
          value="{{ form.email | escape }}"
          placeholder="{{ section.settings.placeholder }}"
          required
        >
        <button type="submit" class="newsletter-submit">
          {{ section.settings.button_label }}
        </button>
        {% if form.errors %}
          <p class="newsletter-error">{{ form.errors.translated_fields['email'] | default: form.errors.messages['email'] }}</p>
        {% endif %}
      {% endif %}
    {% endform %}
  </div>
</section>

{% schema %}
{
  "name": "Newsletter simple",
  "settings": [
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "Subscribe to our newsletter to stay in the know and get 10% off the latest news and happenings."
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Input placeholder",
      "default": "Enter your email address"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Subscribe"
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "Success message",
      "default": "Thanks for subscribing."
    }
  ],
  "presets": [
    {
      "name": "Newsletter simple"
    }
  ]
}
{% endschema %}
