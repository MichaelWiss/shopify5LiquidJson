<section class="intro-section">
  {% if section.settings.section_label != blank %}
    <div class="intro-label">{{ section.settings.section_label }}</div>
  {% endif %}

  {% if section.settings.text != blank %}
    <p class="intro-text">{{ section.settings.text | escape | newline_to_br }}</p>
  {% endif %}

  {% if section.blocks.size > 0 %}
    {% assign fallback_products = "https://images.unsplash.com/photo-1513506003901-1e6a229e2d15?w=200&q=85|https://images.unsplash.com/photo-1524484485831-a92ffc0de03f?w=200&q=85|https://images.unsplash.com/photo-1565538810643-b5bdb714032a?w=200&q=85|https://images.unsplash.com/photo-1507473885765-e6ed057f782c?w=200&q=85|https://images.unsplash.com/photo-1543365067-fa27f2b03c9d?w=200&q=85|https://images.unsplash.com/photo-1578898886225-fe3321dac771?w=200&q=85" | split: "|" %}
    <div class="products-section">
      <div class="products-marquee-wrapper">
        <div class="products-scroll" role="list">
          {% comment %}First set of products{% endcomment %}
          {% for block in section.blocks %}
            {% assign fallback_src = fallback_products[forloop.index0] %}
            <a class="product-thumb" href="{{ block.settings.link | default: '#' }}" {{ block.shopify_attributes }} role="listitem">
              <div class="product-thumb-image">
                {% if block.settings.image != blank %}
                  {{ block.settings.image | image_url: width: 400 | image_tag: loading: 'lazy', sizes: '140px', alt: block.settings.title }}
                {% else %}
                  <img src="{{ fallback_src }}" alt="{{ block.settings.title | default: 'Product' }}" width="140" height="180" loading="lazy">
                {% endif %}
              </div>
              {% if block.settings.title != blank %}
                <div class="product-thumb-title">{{ block.settings.title }}</div>
              {% endif %}
              {% if block.settings.price_text != blank %}
                <div class="product-thumb-price">{{ block.settings.price_text }}</div>
              {% endif %}
            </a>
          {% endfor %}
          {% comment %}Duplicate products for seamless loop{% endcomment %}
          {% for block in section.blocks %}
            {% assign fallback_src = fallback_products[forloop.index0] %}
            <a class="product-thumb" href="{{ block.settings.link | default: '#' }}" aria-hidden="true" role="listitem">
              <div class="product-thumb-image">
                {% if block.settings.image != blank %}
                  {{ block.settings.image | image_url: width: 400 | image_tag: loading: 'lazy', sizes: '140px', alt: block.settings.title }}
                {% else %}
                  <img src="{{ fallback_src }}" alt="{{ block.settings.title | default: 'Product' }}" width="140" height="180" loading="lazy">
                {% endif %}
              </div>
              {% if block.settings.title != blank %}
                <div class="product-thumb-title">{{ block.settings.title }}</div>
              {% endif %}
              {% if block.settings.price_text != blank %}
                <div class="product-thumb-price">{{ block.settings.price_text }}</div>
              {% endif %}
            </a>
          {% endfor %}
        </div>
      </div>
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Intro with marquee",
  "settings": [
    {
      "type": "text",
      "id": "section_label",
      "label": "Section label",
      "default": "Our Approach"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Intro text",
      "default": "Introducing Omilia â€” a family of wall and ceiling-mounted lamps that embody timeless craftsmanship. Each piece celebrates the natural character of stone and wood, designed to elevate the spaces we inhabit with subtle elegance and enduring warmth."
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product marquee item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Floor Lamps"
        },
        {
          "type": "text",
          "id": "price_text",
          "label": "Price text",
          "default": "From $1,245"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "max_blocks": 12,
  "presets": [
    {
      "name": "Intro with marquee",
      "blocks": [
        { "type": "product", "settings": { "title": "Floor Lamps", "price_text": "From $1,245" } },
        { "type": "product", "settings": { "title": "Surface Mounts", "price_text": "From $875" } },
        { "type": "product", "settings": { "title": "Chandeliers", "price_text": "From $2,890" } },
        { "type": "product", "settings": { "title": "Table Lamps", "price_text": "From $625" } },
        { "type": "product", "settings": { "title": "Pendants", "price_text": "From $1,450" } },
        { "type": "product", "settings": { "title": "Sconces", "price_text": "From $780" } }
      ]
    }
  ]
}
{% endschema %}
