<section class="image-with-text image-with-text--{{ section.settings.layout }}">
  <div class="image-with-text__inner">
    <div class="image-with-text__media">
      {% if section.settings.image != blank %}
        {{ section.settings.image | image_url: width: 1400 | image_tag: loading: 'lazy', class: 'image-with-text__image' }}
      {% else %}
        {{ 'image' | placeholder_svg_tag: 'image-with-text__placeholder' }}
      {% endif %}
    </div>

    <div class="image-with-text__body">
      {% if section.settings.eyebrow != blank %}
        <p class="image-with-text__eyebrow">{{ section.settings.eyebrow }}</p>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h2 class="image-with-text__heading">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.text != blank %}
        <div class="image-with-text__text">{{ section.settings.text }}</div>
      {% endif %}

      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a class="image-with-text__cta" href="{{ section.settings.button_link }}">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Image with text",
  "settings": [
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "default": "media-left",
      "options": [
        { "value": "media-left", "label": "Image left" },
        { "value": "media-right", "label": "Image right" }
      ]
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Modular system"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Alternating image and text rhythm"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Body copy",
      "default": "<p>Lean on the spacing and typography tokens to keep every block balanced.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Explore"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Image with text"
    }
  ]
}
{% endschema %}
