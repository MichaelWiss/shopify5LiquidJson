<section class="image-text-section">
  <div class="image-text-container{% if section.settings.layout == 'media-right' %} reverse{% endif %}">
    <div class="image-text-media">
      {% if section.settings.image != blank %}
        <div class="image-text-media-inner">
          {{ section.settings.image | image_url: width: 1400 | image_tag: loading: 'lazy' }}
        </div>
      {% else %}
        <div class="image-text-media-inner">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>

    <div class="image-text-content">
      {% if section.settings.eyebrow != blank %}
        <p class="image-text-eyebrow">{{ section.settings.eyebrow }}</p>
      {% endif %}

      {% if section.settings.heading != blank %}
        <h2 class="image-text-heading">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.text != blank %}
        <div class="image-text-body">{{ section.settings.text }}</div>
      {% endif %}

      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        {% render 'arrow-link',
          text: section.settings.button_label,
          url: section.settings.button_link,
          class: 'image-text-link',
          icon_size: '14'
        %}
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Image with text",
  "settings": [
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "default": "media-left",
      "options": [
        { "value": "media-left", "label": "Image left" },
        { "value": "media-right", "label": "Image right" }
      ]
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow",
      "default": "Modular system"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Alternating image and text rhythm"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Body copy",
      "default": "<p>Lean on the spacing and typography tokens to keep every block balanced.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Explore"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Image with text"
    }
  ]
}
{% endschema %}
