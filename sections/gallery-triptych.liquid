<section class="gallery-triptych">
  <div class="gallery-triptych__grid">
    {% for block in section.blocks %}
      <div class="gallery-triptych__item" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          {{ block.settings.image | image_url: width: 1600 | image_tag: loading: 'lazy', class: 'gallery-triptych__image', sizes: '(min-width: 1024px) 33vw, 100vw' }}
        {% else %}
          {{ 'collection-1' | placeholder_svg_tag: 'gallery-triptych__image gallery-triptych__image--placeholder' }}
        {% endif %}
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Gallery triptych",
  "settings": [],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Gallery triptych",
      "blocks": [
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}
