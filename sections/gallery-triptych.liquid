<section class="three-column">
  {% assign triptych_fallbacks = "https://images.unsplash.com/photo-1600566753190-17f0baa2a6c3?w=600&q=90|https://images.unsplash.com/photo-1600607687920-4e2a09cf159d?w=600&q=90|https://images.unsplash.com/photo-1600585152220-90363fe7e115?w=600&q=90" | split: "|" %}
  {% assign triptych_alt = "Interior 1|Interior 2|Interior 3" | split: "|" %}
  <div class="three-grid">
    {% for block in section.blocks %}
      {% assign fallback_src = triptych_fallbacks[forloop.index0] %}
      {% assign fallback_alt = triptych_alt[forloop.index0] | default: 'Gallery image' %}
      {% assign image_alt = block.settings.alt_text | default: fallback_alt %}
      <figure class="three-item figure-frame" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          {{ block.settings.image | image_url: width: 1600 | image_tag: loading: 'lazy', sizes: '(min-width: 1024px) 33vw, 100vw', alt: image_alt }}
        {% else %}
          <img src="{{ fallback_src }}" alt="{{ image_alt }}" loading="lazy">
        {% endif %}
        {% if block.settings.caption != blank or block.settings.caption_link_label != blank or block.settings.fig_label != blank %}
          <figcaption class="gallery-caption">
            {% if block.settings.fig_label != blank or block.settings.caption != blank %}
              <div class="gallery-caption__label">
                {% if block.settings.fig_label != blank %}
                  <span class="gallery-caption__fig">{{ block.settings.fig_label }}</span>
                {% endif %}
                {% if block.settings.caption != blank %}
                  <span>{{ block.settings.caption }}</span>
                {% endif %}
              </div>
            {% endif %}
            {% if block.settings.caption_link_label != blank and block.settings.caption_link_url != blank %}
              {% render 'arrow-link',
                text: block.settings.caption_link_label,
                url: block.settings.caption_link_url,
                class: 'gallery-caption__link',
                icon_size: '11'
              %}
            {% endif %}
          </figcaption>
        {% endif %}
      </figure>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Gallery triptych",
  "settings": [],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt text"
        },
        {
          "type": "text",
          "id": "fig_label",
          "label": "Figure label",
          "default": "Fig."
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption"
        },
        {
          "type": "text",
          "id": "caption_link_label",
          "label": "Caption link label"
        },
        {
          "type": "url",
          "id": "caption_link_url",
          "label": "Caption link URL"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Gallery triptych",
      "blocks": [
        { "type": "image" },
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}
