<section class="quarters-section">
  <div class="quarters-container">
    {% if section.settings.heading != blank %}
      <h2 class="quarters-heading">{{ section.settings.heading }}</h2>
    {% endif %}
    <div class="quarters-layout">
      <div class="quarters-text">
        {% if section.settings.intro != blank %}
          {{ section.settings.intro }}
        {% endif %}
        {% if section.settings.details != blank %}
          {{ section.settings.details }}
        {% endif %}
      </div>
      {% assign quarters_fallbacks = "https://images.unsplash.com/photo-1616047006789-b7af5afb8c20?w=600&q=90|https://images.unsplash.com/photo-1615875221248-d8f28a5a5d30?w=600&q=90" | split: "|" %}
      {% assign quarters_alt = "Quarters Interior 1|Quarters Interior 2" | split: "|" %}
      <div class="quarters-images">
        {% for block in section.blocks %}
          {% assign fallback_src = quarters_fallbacks[forloop.index0] %}
          {% assign fallback_alt = quarters_alt[forloop.index0] | default: 'Quarters image' %}
          {% assign image_alt = block.settings.alt_text | default: fallback_alt %}
          <div class="quarters-image" {{ block.shopify_attributes }}>
            {% if block.settings.image != blank %}
              {{ block.settings.image | image_url: width: 1200 | image_tag: loading: 'lazy', sizes: '(min-width: 1024px) 50vw, 100vw', alt: image_alt }}
            {% else %}
              <img src="{{ fallback_src }}" alt="{{ image_alt }}" loading="lazy">
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Quarters spotlight",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Quarters"
    },
    {
      "type": "richtext",
      "id": "intro",
      "label": "Intro copy",
      "default": "<p>The Quarters is our reflection on uncluttered living and hospitality. From our carefully selected furniture to the art on the walls, the studio invites you to experience how our products integrate into real living spaces.</p>"
    },
    {
      "type": "richtext",
      "id": "details",
      "label": "Details copy",
      "default": "<p><strong>Opening Hours</strong><br>Tuesday to Sunday: 11am â€“ 6pm<br>Monday: Closed</p><p><strong>Address</strong><br>Quarters by In Common With<br>27 Greenpoint Ave<br>Brooklyn, NY 11222</p>"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt text"
        }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [
    {
      "name": "Quarters spotlight",
      "blocks": [
        { "type": "image" },
        { "type": "image" }
      ]
    }
  ]
}
{% endschema %}
