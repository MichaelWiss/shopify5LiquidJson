{% case name %}
  {% when 'search' %}
    <svg class="icon icon--search" viewBox="0 0 20 20" aria-hidden="true">
      <circle cx="9" cy="9" r="7" fill="none" stroke="currentColor" stroke-width="1.5" />
      <path d="m14 14 4 4" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" />
    </svg>
  {% when 'cart' %}
    <svg class="icon icon--cart" viewBox="0 0 24 24" aria-hidden="true">
      <path d="M3 4h2l2 11h11l2-8H6" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
      <circle cx="9" cy="19" r="1.5" fill="currentColor" />
      <circle cx="18" cy="19" r="1.5" fill="currentColor" />
    </svg>
  {% when 'arrow-right' %}
    <svg class="icon icon--arrow-right" viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
      <polyline points="44 40 52 32 44 24" stroke="currentColor" stroke-width="2" fill="none"></polyline>
      <line x1="52" y1="32" x2="12" y2="32" stroke="currentColor" stroke-width="2"></line>
    </svg>
  {% when 'arrow-left' %}
    <svg class="icon icon--arrow-left" viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
      <polyline points="20 24 12 32 20 40" stroke="currentColor" stroke-width="2" fill="none"></polyline>
      <line x1="52" y1="32" x2="12" y2="32" stroke="currentColor" stroke-width="2"></line>
    </svg>
  {% when 'arrow-right-wide' %}
    <svg class="icon icon--arrow-right-wide" viewBox="0 0 64 40" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
      <line x1="2" y1="20" x2="53" y2="20" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
      <polyline points="45 12 53 20 45 28" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" />
    </svg>
  {% else %}
    <svg class="icon" viewBox="0 0 12 12" aria-hidden="true">
      <circle cx="6" cy="6" r="5" fill="currentColor" />
    </svg>
{% endcase %}
