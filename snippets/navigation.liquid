{% case type %}
  {% when 'breadcrumbs' %}
    {% unless template == 'index' or template == 'cart' %}
      <nav class="breadcrumbs" aria-label="{{ 'general.breadcrumbs.label' | t }}">
        <ol class="breadcrumbs__list">
          <li class="breadcrumbs__item"><a href="/">{{ 'general.breadcrumbs.home' | t: default: 'Home' }}</a></li>

          {% if template contains 'collection' and collection %}
            <li class="breadcrumbs__item">
              <span aria-hidden="true">/</span>
              <span>{{ collection.title }}</span>
            </li>
          {% elsif template contains 'product' %}
            {% if collection %}
              <li class="breadcrumbs__item">
                <span aria-hidden="true">/</span>
                <a href="{{ collection.url }}">{{ collection.title }}</a>
              </li>
            {% endif %}
            <li class="breadcrumbs__item">
              <span aria-hidden="true">/</span>
              <span>{{ product.title }}</span>
            </li>
          {% elsif template contains 'page' %}
            <li class="breadcrumbs__item">
              <span aria-hidden="true">/</span>
              <span>{{ page.title }}</span>
            </li>
          {% endif %}
        </ol>
      </nav>
    {% endunless %}

  {% else %}
    {% comment %}
      Extend this snippet for other navigation patterns as needed.
    {% endcomment %}
{% endcase %}
