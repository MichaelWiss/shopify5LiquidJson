<article class="product-card" {% if product.available == false %}data-product-sold-out="true"{% endif %}>
  <a class="product-card__link" href="{{ product.url }}">
    <div class="product-card__media">
      {% if product.featured_media %}
        {{ product.featured_media | image_url: width: 1200 | image_tag: loading: 'lazy', class: 'product-card__image' }}
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'product-card__placeholder' }}
      {% endif %}
    </div>

    <div class="product-card__meta">
      <div class="product-card__heading">
        <h3 class="product-card__title">{{ product.title }}</h3>
        {% if product.tags contains 'new' %}
          <span class="product-card__badge">New</span>
        {% endif %}
      </div>
      <p class="product-card__price">
        {% if product.price_varies %}
          From {{ product.price_min | money }}
        {% else %}
          {{ product.price | money }}
        {% endif %}
      </p>
    </div>
  </a>
</article>
