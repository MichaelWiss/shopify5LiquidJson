{% comment %}
  Subtle arrow link component
  
  Parameters:
  - text: Link text (required)
  - url: Link destination (required)
  - class: Additional CSS classes (optional)
  - icon_size: SVG size - '11' or '14' (default: '14')
{% endcomment %}

{% assign icon_size = icon_size | default: '14' %}

<a href="{{ url }}" class="{% if class %}{{ class }}{% else %}arrow-link{% endif %}">
  {{ text }}
  <svg width="{{ icon_size }}" height="{{ icon_size }}" viewBox="0 0 16 16" fill="none" aria-hidden="true">
    <path d="M3 8H13M13 8L9 4M13 8L9 12" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
  </svg>
</a>
